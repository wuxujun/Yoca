<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/item_background">
    <LinearLayout android:id="@+id/llMemberItem"
        android:layout_width="match_parent"
        android:layout_height="64dp" android:gravity="center_vertical">
    <ImageView
        android:id="@+id/ivMenuItemIcon"
        android:layout_width="48dp" android:layout_marginLeft="@dimen/menu_item_member_left"
        android:layout_height="48dp" android:src="@drawable/user"/>
    <TextView
        android:id="@+id/tvMenuItemTitle"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/menu_member"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       style="@style/ment_item_label" />
    </LinearLayout>
    <LinearLayout android:id="@+id/llGroupItem"
        android:layout_width="match_parent" android:visibility="gone"
        android:layout_height="80dp" android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivGroupItemIcon"
            android:layout_width="60dp" android:layout_marginLeft="@dimen/menu_item_left"
            android:layout_height="60dp" android:src="@drawable/user"/>
        <TextView
            android:id="@+id/tvGroupItemTitle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/menu_member"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ment_item_label" />
    </LinearLayout>

</LinearLayout>