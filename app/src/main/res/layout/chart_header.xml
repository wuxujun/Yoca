<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" android:background="@drawable/header_tab_bg_s" android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent" android:background="@drawable/header_tab_bg" android:layout_marginLeft="1dp" android:layout_marginRight="1dp"
        android:layout_height="38dp" android:orientation="horizontal" android:layout_gravity="center_vertical">
        <Button android:layout_weight="1" android:background="@drawable/header_tab_bg_left" android:id="@+id/btnChartDay"
            android:layout_width="match_parent" style="@style/chart_item_button_normal"
            android:layout_height="match_parent" android:text="@string/chart_day" />
        <Button android:layout_weight="1" android:id="@+id/btnChartWeek" android:background="@color/btn_color_selected"
            android:layout_width="match_parent" style="@style/chart_item_button_normal"
            android:layout_height="match_parent" android:text="@string/chart_week" android:layout_marginLeft="0dp" android:layout_marginRight="0dp"/>
        <Button android:layout_weight="1" android:id="@+id/btnChartMonth" android:background="@color/item_background" android:layout_marginLeft="0dp" android:layout_marginRight="0dp"
            android:layout_width="match_parent" style="@style/chart_item_button_normal"
            android:layout_height="match_parent" android:text="@string/chart_month"/>
        <Button android:layout_weight="1" android:id="@+id/btnChartYear" android:background="@drawable/header_tab_bg_right"
            android:layout_width="match_parent" style="@style/chart_item_button_normal"
            android:layout_height="match_parent" android:text="@string/chart_year"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>