<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:paddingLeft="10dp" android:paddingRight="10dp"
        android:layout_width="match_parent"  android:background="@color/action_bar_bg_color"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:id="@+id/tvTitle" android:layout_margin="2dp"
            android:layout_width="match_parent" android:text="2015-08-05"
            android:layout_height="wrap_content" style="@style/main_text_label" android:textSize="14sp"/>

        <TextView android:layout_margin="2dp"
            android:layout_width="match_parent" style="@style/main_text_label" android:textSize="13sp"
            android:layout_height="wrap_content" android:id="@+id/tvContent" />
        <TextView android:layout_margin="2dp"
            android:layout_width="match_parent" style="@style/main_text_label" android:textSize="13sp"
            android:layout_height="wrap_content" android:id="@+id/tvStatus" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp" android:background="@color/white"/>

</LinearLayout>