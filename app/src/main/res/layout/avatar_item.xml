<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"  android:background="@color/action_bar_bg_color"
        android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:id="@+id/ivIcon"
            android:layout_width="100dp"  android:layout_margin="10dp"
            android:layout_height="120dp"/>
        <LinearLayout android:layout_margin="10dp"
            android:layout_width="match_parent" android:layout_weight="1" android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:id="@+id/tvTime"
                android:layout_width="match_parent" android:background="@color/transparent"
                android:layout_height="wrap_content" android:textStyle="bold" android:textSize="18sp" android:text="1"
                android:singleLine="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvBust"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvWaistline"  />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvHips"  />

        </LinearLayout>
            <LinearLayout android:layout_margin="10dp"
                android:layout_width="100dp" android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent" android:textSize="36sp" android:textStyle="bold"
                    android:layout_height="match_parent" android:id="@+id/tvWeight"  android:text="60.0"/>

            </LinearLayout>


    </LinearLayout>

</LinearLayout>