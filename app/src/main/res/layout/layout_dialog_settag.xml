<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <com.andreabaccega.widget.FormEditText
        android:layout_width="match_parent" android:gravity="top"
        android:layout_height="100dp" android:hint="@string/setting_warn_tag_hit" android:layout_margin="20dp" />

    <LinearLayout android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
        android:layout_width="match_parent" android:gravity="center_vertical"
        android:layout_height="wrap_content" android:orientation="horizontal"  android:background="@color/item_background">
        <Button
            android:id="@+id/btnDialogOk" android:text="@string/btn_Ok"
            android:layout_weight="1"
            android:layout_width="match_parent" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btnDialogCancel" android:text="@string/btn_Cancel"
            android:layout_weight="1"
            android:layout_width="match_parent" android:gravity="center_horizontal|center_vertical"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>