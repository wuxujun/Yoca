<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:padding="10dp"  android:layout_marginTop="1dp"
        android:layout_width="match_parent"  android:background="@color/action_bar_bg_color"
        android:layout_height="wrap_content" android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView android:id="@+id/ivIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@drawable/ic_launcher"/>
            <TextView android:id="@+id/tvTitle" android:paddingTop="100dp"
                android:layout_width="match_parent" android:background="@color/transparent"
                android:layout_height="wrap_content" style="@style/main_text_label" android:textSize="18sp" android:text="1"
                android:singleLine="true" />
        </FrameLayout>
        <LinearLayout android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

            <TextView android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" style="@style/main_text_label" android:textSize="14sp"
                android:lines="3"
                android:maxLines="4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>