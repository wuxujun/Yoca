<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/item_background">
    <LinearLayout android:id="@+id/llContentItem" android:layout_marginTop="5dp"
        android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <LinearLayout android:layout_marginRight="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:layout_width="match_parent" android:text="@string/setting_Repeat" style="@style/main_item_text_label"
                android:layout_height="wrap_content" android:id="@+id/tvContentTitle" android:gravity="center_vertical|center_horizontal"/>
            <TextView
                android:layout_width="match_parent" android:text="111" style="@style/main_item_text_label"
                android:layout_height="wrap_content" android:id="@+id/tvContentValue" android:gravity="center_horizontal|center_vertical"/>
        </LinearLayout>
    <LinearLayout android:layout_marginRight="20dp"
        android:layout_width="match_parent" android:layout_weight="1" android:gravity="center_horizontal|center_vertical"
        android:layout_height="match_parent" android:orientation="vertical">
       <com.xujun.widget.SpringProgressView
           android:id="@+id/spvValue"
           android:layout_width="match_parent"
           android:layout_height="10dp"/>
        </LinearLayout>
        <ImageButton android:id="@+id/ibContentDel" android:focusable="false"
            android:layout_width="wrap_content" android:layout_marginRight="20dp"
            android:layout_height="wrap_content" android:background="@drawable/number"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:id="@+id/llContentDetail"
        android:layout_height="wrap_content" android:visibility="gone">
        <TextView
            android:layout_width="match_parent" style="@style/main_item_text_label"
            android:layout_height="wrap_content" android:text="@string/account_Nick"/>
        </LinearLayout>


</LinearLayout>