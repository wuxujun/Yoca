<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:id="@+id/llHistoryData"
        android:layout_width="match_parent" android:layout_margin="10dp" android:gravity="center_vertical"
        android:layout_height="48dp" android:orientation="horizontal" >
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/chart_history_data"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ment_item_label" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:background="@drawable/enter"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_height="0.5dp" android:background="@color/btn_color" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp" android:gravity="center_vertical"
        android:layout_height="48dp" android:orientation="horizontal" >
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/main_show_target"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ment_item_label" />
        <com.xujun.widget.ToggleButton android:id="@+id/tbTargetShow"
            android:layout_width="54dp" android:layout_marginRight="20dp"
            android:layout_height="30dp"
            toggle:onColor="#45c878"
            toggle:offColor="#ddd"
            toggle:spotColor="@color/chart_grid_color"
            toggle:offBorderColor="#000"
            />
    </LinearLayout>
    <ImageView android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/btn_color" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="10dp" android:gravity="center_vertical"
        android:layout_height="48dp" android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/main_unit"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ment_item_label" />
        <TextView android:id="@+id/tvUnit"
            android:layout_width="wrap_content" android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/btn_color" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <TextView android:text="@string/about_version" android:id="@+id/tvRemark"
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="wrap_content" style="@style/ment_item_label"/>

    </LinearLayout>


</LinearLayout>