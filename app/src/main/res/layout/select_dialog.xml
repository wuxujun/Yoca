<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:layout_margin="25dip">
    <TextView  android:id="@+id/tv_select_dialog_title" android:layout_width="match_parent" android:layout_height="44dip" android:textStyle="bold" android:textSize="18sp" android:text="选择类型" android:textColor="@color/white"
               android:gravity="center|center_vertical"
               android:background="@color/action_bar_bg_color"/>
    <ListView android:id="@+id/lv_select" style="@style/widget_listview" android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/ll_select_oper" android:background="@color/action_bar_bg_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal">
    <Button android:id="@+id/btn_select_dialog_cancel" android:paddingLeft="40dip" android:paddingRight="40dip" android:layout_margin="10dip" android:layout_width="wrap_content" android:background="@drawable/item_normal_green" android:layout_height="40dip" android:text="取   消" android:textColor="@color/white" android:textStyle="bold"/>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>