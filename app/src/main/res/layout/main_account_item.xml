<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/item_background">
    <LinearLayout android:id="@+id/llMemberItem"
        android:layout_width="match_parent"
        android:layout_height="64dp" android:gravity="center_vertical">
    <ImageView
        android:id="@+id/ivItemIcon"
        android:layout_width="48dp" android:layout_margin="10dp"
        android:layout_height="48dp" android:src="@drawable/user"/>
    <TextView
        android:id="@+id/tvItemTitle"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/menu_member"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       style="@style/ment_item_label" />
    </LinearLayout>
</LinearLayout>